@{
    ViewData["Title"] = "Comunas";
}
@model PresentComuna;
@{
    if (Model.Comunas != null && Model.Comunas.Count != 0)
    {
        <input id="idRegionFormComuna" value="@Model.Comunas[0].IdRegion" hidden />
        <table class="table table-striped table-bordered table-hover table-condensed">
            <thead>
                <tr>
                    <th></th>
                    <th>Comuna</th>
                    <th>Poblacion</th>
                    <th>Densidad</th>
                    <th>Superficie</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Comunas)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelitem => item.IdComuna, new { @class = "form-control", @readonly = "readonly" })</td>
                        <td>@Html.DisplayFor(modelitem => item.Comuna, new { @class = "form-control", @readonly = "readonly" })</td>
                        <td>@Html.DisplayFor(modelitem => item.poblacion, new { @class = "form-control", @readonly = "readonly" })</td>
                        <td>@Html.DisplayFor(modelitem => item.densidad, new { @class = "form-control", @readonly = "readonly" })</td>
                        <td>@Html.DisplayFor(modelitem => item.superficie, new { @class = "form-control", @readonly = "readonly" })</td>
                        <td>
                            <a href="#" class="EditComuna" data-id="@item.IdComuna" title="Editar Comuna">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                    <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                    <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z" />
                                </svg>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        
    }
    else
    {
        <div class="alert-danger">No hay datos de comunas</div>
    }
    <button type="button" id="AddComuna" class="btn btn-primary">Crear Comuna</button> 
    <button type="button" onclick="window.history.back();">Volver</button>
}
<div class="modal top fade" id="DialogFormComuna" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
            </div>
            <div class="modal-body">
                @Html.RenderPartialAsync("Form/_formComuna").AsyncState
            </div>
        </div>
    </div>
</div>